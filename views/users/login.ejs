<% layout('./layouts/boilerplate') -%>

<div class="row mt-3 mb-5" >
    <h1 class="col-6 offset-3">LogIn on Wanderlust</h1>
    <div class="col-6 offset-3">
        <form action="/login" method="post" novalidate class="needs-validation mb-5" >
            <div>
                <label for="username" class="form-label">Username</label>
                <input 
                name="username"  
                id="username"
                class="form-control"
                required >
                <div class="valid-feedback"> looks good!!</div>
            </div>
            <div>
                <label for="password" class="form-label">Password</label>
                <input 
                name="password"  
                id="password"
                type="password"
                class="form-control"
                required >
            </div>
            <button class="btn btn-outline-success mt-5">logIn</button>
        </form>
    </div>
</div>